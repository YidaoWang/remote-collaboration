<Thumb x:Class="RemoteCollaboration.View.Controls.PieceControle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RemoteCollaboration.View.Controls"
             mc:Ignorable="d" 
             DragStarted="Thumb_DragStarted"
             DragCompleted="Thumb_DragCompleted"
             DragDelta="Thumb_DragDelta"
             Canvas.Top="{Binding Top}"
             Canvas.Left="{Binding Left}"
             Height="{Binding Height}" 
             Width="{Binding Width}">
    <Thumb.Template>
        <ControlTemplate>
            <Border x:Name="Thumb_Border" BorderBrush="{Binding BorderBrush}" BorderThickness="{Binding BorderThickness}">
                <Image Source="{Binding ImageSource}"></Image>
            </Border>
        </ControlTemplate>
    </Thumb.Template>
</Thumb>
