<Thumb x:Class="RemoteCollaboration.View.Controls.Piece"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RemoteCollaboration.View.Controls"
             mc:Ignorable="d" 
             DragStarted="Thumb_DragStarted"
             DragCompleted="Thumb_DragCompleted"
             DragDelta="Thumb_DragDelta"      
             Height="100" Width="100">
    <Thumb.Template>
        <ControlTemplate>
            <Border x:Name="Thumb_Border" BorderBrush="Red" BorderThickness="0">
                <Image Source="{Binding ImageSource, RelativeSource={RelativeSource TemplatedParent}}"></Image>
            </Border>
        </ControlTemplate>
    </Thumb.Template>
</Thumb>
