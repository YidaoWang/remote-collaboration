<Page
    x:Class="RemoteCollaboration.View.Pages.StartupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RemoteCollaboration.View.Pages"
      mc:Ignorable="d" 
      Height="800" Width="1280"
      Title="StartupPage">
    <Grid  Background="AliceBlue">
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" FontSize="80" Margin="50">
                Remote Collaboration
            </TextBlock>
            <TextBlock FontSize="24" Text="{Binding Experiment.Score, StringFormat=Last Score {0}}"></TextBlock>
            <TextBlock FontSize="24" Text="{Binding Experiment.Time, StringFormat=Last Time(Seconds) {0}}"></TextBlock>
        </StackPanel>

        <Button Style="{StaticResource NormalButton}" Command="{Binding StartCommand}"> 
            Start
        </Button>
    </Grid>
</Page>
